@model ChiaSeCode_TH.Models.DanhMuc

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/LayoutAdmin/LayoutAdmin.cshtml";
}

<br />
<br /><div style="text-align: center; font-size: 20px; color: red; font-weight: bold"><a href="/Admin/DanhMucs/Index" style="font-size: 30px;"><b><i class="fas fa-chevron-circle-left"></i></b></a>Xóa: @Model.TenDanhMuc [Mã: @Model.TenDanhMuc]&nbsp;&nbsp;&nbsp;</div>
<br />
<div>
    <div class="dl-horizontal">
        <div class="dl-horizontal">
            <div class="dl-horizontal" style="margin-left: 43%">
                <span>&nbsp;<b><i class="fas fa-align-justify">&nbsp;</i>Danh mục:</b><b style="color: forestgreen;">&nbsp;@Html.DisplayFor(model => model.TenDanhMuc)</b></span>
            </div>
        </div>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-danger" style="width: 20%; margin-left: 38%; margin-top: 5%" />
        </div>
    }
</div>
