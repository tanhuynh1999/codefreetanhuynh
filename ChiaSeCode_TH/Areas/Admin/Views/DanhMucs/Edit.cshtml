@model ChiaSeCode_TH.Models.DanhMuc

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/LayoutAdmin/LayoutAdmin.cshtml";
}

<br />
<br /><div style="text-align: center; font-size: 20px; color: red; font-weight: bold"><a href="/Admin/DanhMucs/Index" style="font-size: 30px;"><b><i class="fas fa-chevron-circle-left">&nbsp;</i></b></a>Sửa: @Model.TenDanhMuc [Mã: @Model.MaDanhMuc]&nbsp;&nbsp;&nbsp;</div>
<br />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MaDanhMuc)

        <div class="form-group">
            <b class="control-label col-md-2" style="color:saddlebrown"><i class="fas fa-align-justify">&nbsp;</i>Tên danh mục<b style="color: red;">*</b></b>
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenDanhMuc, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenDanhMuc, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lưu" class="btn btn-danger" style="width: 20%; margin-left: 40%; margin-top: 5%" />
            </div>
        </div>
    </div>
}
