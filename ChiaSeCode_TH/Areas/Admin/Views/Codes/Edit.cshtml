@model ChiaSeCode_TH.Models.Code

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/LayoutAdmin/LayoutAdmin.cshtml";
}

@using (Html.BeginForm("Edit", "Codes", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <br /><div style="text-align: center; font-size: 20px; color: red; font-weight: bold"><a href="/Admin/Codes/Index" style="font-size: 30px;"><b><i class="fas fa-chevron-circle-left">&nbsp;&nbsp;</i></b></a>Sửa: @Model.TenMaCode [Mã: @Model.MaCode]&nbsp;&nbsp;&nbsp;<a href="/Admin/Codes/Details/@Model.MaCode" style="font-size: 30px"><b><i class="fa fa-eye"></i></b></a></div>
    <br />
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MaCode)
        <div>
            <div class="form-group" style="width:50%; float: left">
                <b class="control-label col-md-2" style="color:saddlebrown"><i class="fas fa-newspaper">&nbsp;</i>Duyệt:</b>
                <div class="col-md-10">
                   <select name="Duyet" class="form-control">
                       <option value="True">Đăng bài</option>
                       <option value="False">Không đăng</option>
                   </select>
                </div>
            </div>
        </div>
        <div>
            <div class="form-group" style="width:50%; float: left">
                <b class="control-label col-md-2" style="color:saddlebrown"><i class="fa fa-code-branch">&nbsp;</i>Tiêu đề chính<b style="color: red;">*</b></b>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TenMaCode, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TenMaCode, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div>
            <div class="form-group" style="width:50%; float: left">
                <b class="control-label col-md-2" style="color:saddlebrown"><i class="fa fa-eye">&nbsp;</i>Lượt xem ảo</b>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.LuotXem, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.LuotXem, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group" style="width:50%; float: right">
                <b class="control-label col-md-2" style="color:saddlebrown"><i class="fa fa-upload">&nbsp;</i>Lượt tải ảo</b>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.LuotTai, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.LuotTai, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div>
            <div class="form-group" style="width:50%; float: left">
                <b class="control-label col-md-2" style="color:saddlebrown"><i class="fas fa-align-justify">&nbsp;</i>Danh mục</b>
                <div class="col-md-10">
                    @Html.DropDownList("MaDanhMuc", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.MaDanhMuc, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group" style="width:50%; float: right">
                <b class="control-label col-md-2" style="color:saddlebrown"><i class="fas fa-align-justify">&nbsp;</i>Phân loại</b>
                <div class="col-md-10">
                    @Html.DropDownList("MaTheLoai", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.MaTheLoai, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div>
            <div class="form-group" style="width:50%; float: left">
                <b class="control-label col-md-2" style="color:saddlebrown"><i class="fas fa-cog">&nbsp;</i>Nội dung cài đặt</b>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.NoiDungCaiDat, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NoiDungCaiDat, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group" style="width:50%; float: right">
                <b class="control-label col-md-2" style="color:saddlebrown"><i class="fas fa-file-alt">&nbsp;</i>Nội dung code</b>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.NoiDungCode, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NoiDungCode, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div>
            <div class="form-group" style="width:50%; float: left">
                <b class="control-label col-md-2" style="color:saddlebrown"><i class="fas fa-newspaper">&nbsp;</i>Ngày đăng:</b>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.NgayDang, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NgayDang, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group" style="width:50%; float: right">
                <b class="control-label col-md-2" style="color:saddlebrown"><i class="fa fa-user">&nbsp;</i>Người dùng tùy chọn</b>
                <div class="col-md-10">
                    @Html.DropDownList("MaNguoiDung", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.MaNguoiDung, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lưu" class="btn btn-danger" style="width: 20%; margin-left: 30%; margin-top: 5%" />
            </div>
        </div>
    </div>
}
