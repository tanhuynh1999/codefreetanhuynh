@model ChiaSeCode_TH.Models.Code

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/LayoutAdmin/LayoutAdmin.cshtml";
}

    <div>
        <br /><div style="text-align: center; font-size: 20px; color: red; font-weight: bold"><a href="/Admin/Codes/Index" style="font-size: 30px;"><b><i class="fas fa-chevron-circle-left">&nbsp;&nbsp;</i></b></a>Xem: @Model.TenMaCode [Mã: @Model.MaCode]&nbsp;&nbsp;&nbsp;<a href="/Admin/Codes/Edit/@Model.MaCode" style="font-size: 30px"><b><i class="fa fa-edit"></i></b></a></div>
        <br />
        <div class="dl-horizontal">
            <div class="container">
                <img src="@Url.Content("~/HinhAnh/"+Model.HinhAnh)" style="border-radius: 10px; float: left; width: 20%; height: 150px" />
                <span>&nbsp;<b><i class="fa fa-file-code">&nbsp;</i>Tên code:</b><b style="color: forestgreen;">&nbsp;@Html.DisplayFor(model => model.TenMaCode)</b></span>
                <br />
                <span>&nbsp;<b><i class="fa fa-newspaper">&nbsp;</i>Ngày đăng:</b><b style="color: forestgreen;">&nbsp;  @Html.DisplayFor(model => model.NgayDang)</b></span>
                <br />
                <span>&nbsp;<b><i class="fa fa-eye">&nbsp;</i>Lượt xem:</b><b style="color: forestgreen;">&nbsp; @Html.DisplayFor(model => model.LuotXem)</b></span>
                <br />
                <span>&nbsp;<b><i class="fa fa-upload">&nbsp;</i>Lượt tải:</b><b style="color: forestgreen;">&nbsp; @Html.DisplayFor(model => model.LuotTai)</b></span>
                <br />
                <span>&nbsp;<b><i class="fa fa-link">&nbsp;</i>Link tải:</b><b style="color: forestgreen;">&nbsp; @Html.DisplayFor(model => model.LinkTai)</b></span>
                <br />
                <span>&nbsp;<b><i class="fas fa-align-justify">&nbsp;</i>Danh mục:</b><b style="color: forestgreen;">&nbsp; @Html.DisplayFor(model => model.DanhMuc.TenDanhMuc)</b></span>
                <br />
                <span>&nbsp;<b><i class="fas fa-align-justify">&nbsp;</i>Thể loại:</b><b style="color: forestgreen;">&nbsp; @Html.DisplayFor(model => model.TheLoai.TenTheLoai)</b></span>
                <br />
                <span>&nbsp;<b><i class="fas fa-mail-bulk">&nbsp;</i>Email:</b><b style="color: forestgreen;">&nbsp; @Html.DisplayFor(model => model.NguoiDung.Email)</b></span>
            </div>
            <br>
            <div class="container">
                <div style="width: 49%; float: left;">
                    <div style="background-color: forestgreen; width: 35%; height: 35px; border-radius: 10px 10px 0px 0px;">
                        <span style="color: white; margin-left: 18%; font-size: 20px;">Nội dung cài đặt</span>
                    </div>
                    <div style="border: 1px solid forestgreen; width: 100%; height: 600px; border-radius: 0px 0px 0px 10px;">
                        <span class="container">@Html.Raw(Model.NoiDungCaiDat)</span>
                    </div>
                </div>

                <div style="width: 49%; float: right;">
                    <div style="background-color: forestgreen; width: 35%; height: 35px; border-radius: 10px 10px 0px 0px;">
                        <span style="color: white; margin-left: 18%; font-size: 20px;">Nội dung code</span>
                    </div>
                    <div style="border: 1px solid forestgreen; width: 100%; height: 600px; border-radius: 0px 10px 10px 0px;">
                        <span class="container">@Html.Raw(Model.NoiDungCode)</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
