@using PagedList;
@using PagedList.Mvc;
@model PagedList.PagedList<ChiaSeCode_TH.Models.TinTuc>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/LayoutAdmin/LayoutAdmin.cshtml";
}

<table class="table table-striped">
    <tr>
        <th>
            <b><i class="fa fa-newspaper">&nbsp;</i>Tên tin tức</b>
        </th>
        <th>
            <b><i class="fas fa-calendar-week">&nbsp;</i>Ngày đăng</b>
        </th>
        <th>
            <b><i class="fa fa-image">&nbsp;</i>Ảnh</b>
        </th>
        <th>
            <b><i class="fa fa-eye">&nbsp;</i>Lượt xem</b>
        </th>
        <th>
            <b><i class="fas fa-mail-bulk">&nbsp;</i>Email</b>
        </th>
        <th>
            <b><i class="fa fa-align-justify">&nbsp;</i>Thể loại</b>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenTinTuc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgayDangTinTuc)
            </td>
            <td>
                <img src="@Url.Content("~/HinhAnh/"+item.AnhTinTuc)" style="width:100px; height:50px;" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LuotXemTinTuc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NguoiDung.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TheLoaiTinTuc.TenTheLoaiTinTuc)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.MaTinTuc }) |
                @Html.ActionLink("Xem", "Details", new { id = item.MaTinTuc }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.MaTinTuc })
            </td>
        </tr>
    }
</table>
<center>@Html.PagedListPager(Model, Page => Url.Action("Index", new { Page = Page }))</center>
