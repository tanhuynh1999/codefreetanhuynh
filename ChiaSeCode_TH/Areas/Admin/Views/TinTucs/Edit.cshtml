@model ChiaSeCode_TH.Models.TinTuc

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/LayoutAdmin/LayoutAdmin.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <br /><div style="text-align: center; font-size: 20px; color: red; font-weight: bold"><a href="/Admin/TinTucs/Index" style="font-size: 30px;"><b><i class="fas fa-chevron-circle-left">&nbsp;&nbsp;</i></b></a>Sửa: @Model.TenTinTuc [Mã: @Model.MaTinTuc]&nbsp;&nbsp;&nbsp;<a href="/Admin/TinTucs/Details/@Model.MaTinTuc" style="font-size: 30px"><b><i class="fa fa-eye"></i></b></a></div>
        <br />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MaTinTuc)


        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div>
                <div class="form-group" style="width:50%; float: left">
                    <b class="control-label col-md-2" style="color:saddlebrown"><i class="fa fa-newspaper">&nbsp;</i>Tên tin tức<b style="color: red;">*</b></b>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.TenTinTuc, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.TenTinTuc, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group" style="width:50%; float: right">
                    <b class="control-label col-md-2" style="color:saddlebrown"><i class="fas fa-align-justify">&nbsp;</i>Thể loại:<b style="color: red;">*</b></b>
                    <div class="col-md-10">
                        @Html.DropDownList("MaTheLoaiTinTuc", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.MaTheLoaiTinTuc, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div>
                <div class="form-group" style="width:50%; float: left">
                    <b class="control-label col-md-2" style="color:saddlebrown"><i class="fa fa-image">&nbsp;</i>Ảnh tiêu đề<b style="color: red;">*</b></b>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.AnhTinTuc, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.AnhTinTuc, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group" style="width:50%; float: right">
                    <b class="control-label col-md-2" style="color:saddlebrown"><i class="fas fa-eye">&nbsp;</i>Lượt xem ảo<b style="color: red;">*</b></b>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.LuotXemTinTuc, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.LuotXemTinTuc, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div>
                <div class="form-group" style="width:50%; float: left">
                    <b class="control-label col-md-2" style="color:saddlebrown"><i class="fa fa-user">&nbsp;</i>Người đăng<b style="color: red;">*</b></b>
                    <div class="col-md-10">
                        @Html.DropDownList("MaNguoiDung", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.MaNguoiDung, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group" style="width:50%; float: right">
                    <b class="control-label col-md-2" style="color:saddlebrown"><i class="fas fa-calendar-week">&nbsp;</i>Ngày đăng<b style="color: red;">*</b></b>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.NgayDangTinTuc, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.NgayDangTinTuc, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div>
                <div class="form-group" style="width:50%; float: left">
                    <b class="control-label col-md-2" style="color:saddlebrown"><i class="fa fa-user">&nbsp;</i>Người đăng<b style="color: red;">*</b></b>
                    <div class="col-md-10">
                        @Html.DropDownList("MaNguoiDung", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.MaNguoiDung, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group" style="width:50%; float: right">
                    <b class="control-label col-md-2" style="color:saddlebrown"><i class="fas fa-edit">&nbsp;</i>Nội dung<b style="color: red;">*</b></b>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.NoiDungTinTuc, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.NoiDungTinTuc, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Lưu" class="btn btn-danger" style="width: 20%; margin-left: 30%; margin-top: 5%" />
                </div>
            </div>
        </div>
    </div>
}
