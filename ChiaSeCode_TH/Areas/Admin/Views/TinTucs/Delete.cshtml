@model ChiaSeCode_TH.Models.TinTuc

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/LayoutAdmin/LayoutAdmin.cshtml";
}

<br /><div style="text-align: center; font-size: 20px; color: red; font-weight: bold"><a href="/Admin/TinTucs/Index" style="font-size: 30px;"><b><i class="fas fa-chevron-circle-left">&nbsp;&nbsp;</i></b></a>Xóa: @Model.TenTinTuc [Mã: @Model.MaTinTuc]&nbsp;&nbsp;&nbsp;<a href="/Admin/TinTucs/Edit/@Model.MaTinTuc" style="font-size: 30px"><b><i class="fa fa-edit"></i></b></a></div>
<br />
<div>
    <div class="dl-horizontal">
        <div class="container">
            <img src="@Url.Content("~/HinhAnh/"+Model.AnhTinTuc)" style="border-radius: 10px; float: left; width: 20%; height: 150px" />
            <span>&nbsp;<b><i class="fa fa-newspaper">&nbsp;</i>Tên tin tức:</b><b style="color: forestgreen;">&nbsp;@Html.DisplayFor(model => model.TenTinTuc)</b></span>
            <br />
            <span>&nbsp;<b><i class="fa fa-calendar-week">&nbsp;</i>Ngày đăng:</b><b style="color: forestgreen;">&nbsp;  @Html.DisplayFor(model => model.NgayDangTinTuc)</b></span>
            <br />
            <span>&nbsp;<b><i class="fa fa-eye">&nbsp;</i>Lượt xem:</b><b style="color: forestgreen;">&nbsp; @Html.DisplayFor(model => model.LuotXemTinTuc)</b></span>
            <br />
            <span>&nbsp;<b><i class="fas fa-align-justify">&nbsp;</i>Thể loại:</b><b style="color: forestgreen;">&nbsp; @Html.DisplayFor(model => model.TheLoaiTinTuc.TenTheLoaiTinTuc)</b></span>
            <br />
            <span>&nbsp;<b><i class="fas fa-mail-bulk">&nbsp;</i>Email:</b><b style="color: forestgreen;">&nbsp; @Html.DisplayFor(model => model.NguoiDung.Email)</b></span>
        </div>

    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-danger" style="width: 20%; margin-left: 38%; margin-top: 5%" />
        </div>
    }
</div>
