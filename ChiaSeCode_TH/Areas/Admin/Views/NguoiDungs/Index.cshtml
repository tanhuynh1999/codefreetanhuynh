@model IEnumerable<ChiaSeCode_TH.Models.NguoiDung>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/LayoutAdmin/LayoutAdmin.cshtml";
}

<table class="table table-striped" style="margin-top: 3%">
    <tr>
        <th>
            <b><i class="fas fa-mail-bulk">&nbsp;</i>Email</b>
        </th>
        <th>
            <b><i class="fas fa-key">&nbsp;</i>Mật khẩu</b>
        </th>
        <th>
            <b><i class="fas fa-keyboard">&nbsp;</i>Nhập lại mật khẩu</b>
        </th>
        <th>
            <b><i class="fas fa-user">&nbsp;</i>Vai trò</b>
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                <input type="password" class="password" name="MatKhau" value="@item.MatKhau" disabled/>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NhapLaiMatKhau)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VaiTro.TenVaiTro)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.MaNguoiDung }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.MaNguoiDung })
            </td>
        </tr>
    }

</table>
<script src="https://code.jquery.com/jquery-1.10.2.js"></script>
<script>
$(document).ready(function(){
    $('input[type="password"]').after(' <input type="checkbox" class="check" /> <i class="fa fa-eye"></i>');
    $('.check').change(function(){
        var prev = $(this).prev();
        var value = prev.val();
        var type = prev.attr('type');
        var name = prev.attr('name');
        var id = prev.attr('id');
        var klass = prev.attr('class');
        var new_type = (type == 'password') ? 'text' : 'password';
        prev.remove();
        $(this).before('<input type="'+new_type+'" value="' +value+ '" name="' +name+ '" value="' +value+ '"id="' +id+ '" class="' +klass+ '" />');

    });
})
</script>
