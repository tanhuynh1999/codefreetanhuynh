@model ChiaSeCode_TH.Models.NguoiDung

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/LayoutAdmin/LayoutAdmin.cshtml";
}

<br />
<br /><div style="text-align: center; font-size: 20px; color: red; font-weight: bold"><a href="/Admin/NguoiDungs/Index" style="font-size: 30px;"><b><i class="fas fa-chevron-circle-left"></i></b></a>Xóa: @Model.Email [Mã: @Model.MaNguoiDung]&nbsp;&nbsp;&nbsp;</div>
<br />
<div>
    <div class="dl-horizontal" style="margin-left: 43%">
        <span>&nbsp;<b><i class="fas fa-mail-bulk">&nbsp;</i>Email:</b><b style="color: forestgreen;">&nbsp;@Html.DisplayFor(model => model.Email)</b></span>
        <br />
        <span>&nbsp;<b><i class="fas fa-key">&nbsp;</i>Mật khẩu:</b><b style="color: forestgreen;">&nbsp;@Html.DisplayFor(model => model.MatKhau)</b></span>
        <br />
        <span>&nbsp;<b><i class="fa fa-keyboard">&nbsp;</i>Nhập lại mật khẩu:</b><b style="color: forestgreen;">&nbsp; @Html.DisplayFor(model => model.NhapLaiMatKhau)</b></span>
        <br />
        <span>&nbsp;<b><i class="fa fa-user">&nbsp;</i>Vai trò:</b><b style="color: forestgreen;">&nbsp;@Html.DisplayFor(model => model.VaiTro.TenVaiTro)</b></span>
        <br />
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-danger" style="width: 20%; margin-left: 38%; margin-top: 5%" />
        </div>
    }
</div>
