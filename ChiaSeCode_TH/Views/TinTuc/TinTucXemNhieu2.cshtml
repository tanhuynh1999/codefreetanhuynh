@using ChiaSeCode_TH.Models;
@model List<TinTuc>

@foreach (var item in Model)
{
    <div class="col-md-3">
        <div class="grid1">
            <a href="@Url.Action("XemChiTietTinTuc", "TinTuc", new {@matintuc = item.MaTinTuc })">
                <div class="view view-first">
                    <div class="index_img"><img src="@Url.Content("~/HinhAnh/"+item.AnhTinTuc)" class="img-responsive" alt="" style="height: 180px" /></div>
                    <div class="sale" style="background-color: red">Xem nhiều</div>
                    <div class="mask">
                        <div class="info"><i class="search"> </i> Show More</div>
                        <ul class="mask_img">
                            <li class="star"><img src="~/Content/Layout/images/star.png" alt="" /></li>
                            <li class="set"><img src="~/Content/Layout/images/set.png" alt="" /></li>
                            <div class="clearfix"> </div>
                        </ul>
                    </div>
                </div>
            </a>
            <div class="inner_wrap2">
                <h3 style="font-weight: bold; color: brown">@item.TenTinTuc</h3>
                <ul class="star1">
                    <h4 class="green" style="color: black; font-weight: bold;       ">@item.TheLoaiTinTuc.TenTheLoaiTinTuc</h4>
                    <li><a href="#"> <img src="~/Content/Layout/images/star1.png" alt="">(<i class="fa fa-eye">&nbsp;@item.LuotXemTinTuc</i>)</a></li>
                </ul>
            </div>
        </div>
    </div>
}
