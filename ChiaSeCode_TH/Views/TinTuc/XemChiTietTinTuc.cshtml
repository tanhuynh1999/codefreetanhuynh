@using ChiaSeCode_TH.Models;
@model TinTuc
@{
    ViewBag.Title = "XemChiTietTinTuc";
    Layout = "~/Views/Layout/Layout.cshtml";
}
<!--Menu-->
@Html.Action("Menu", "HienThi")
<!--//Menu-->
<!--Thanh công cụ-->
@Html.Action("ThanhCongCu", "HienThi")
<!--//Thanh công cụ-->
<!--Giao diện trang chủ-->
<div class="content_middle">
    <div class="container">
        <div class="content_middle_box">
            <div class="living_middle">
                <div class="container" style="margin-top: -10%;">
                    <div style="border: 1px solid forestgreen; width: 100%; height: 100%; border-radius: 0px 10px 10px 10px;">
                        <br />
                        <h2 style="font-weight: bold; color: brown">@Model.TenTinTuc</h2>
                        <div>
                            <img src="@Url.Content("~/HinhAnh/"+Model.AnhTinTuc)" style="width: 50%; height: 300px; float: left" class="container" />
                            <div style="float: right; width: 50%; height: 300px">
                                <b>Thể loại:&nbsp;<span style="color: green">@Model.TheLoaiTinTuc.TenTheLoaiTinTuc</span></b><br />
                                <b>Ngày đăng:&nbsp;<span style="color: green">@Model.NgayDangTinTuc</span></b><br />
                                <b>Người đăng:&nbsp;<span style="color: green">@Model.NguoiDung.TenHienThi</span></b><br />
                                <b><i class="fa fa-star" style="color: rgb(239, 197, 41)"></i></b>
                                <b><i class="fa fa-star" style="color: rgb(239, 197, 41)"></i></b>
                                <b><i class="fa fa-star" style="color: rgb(239, 197, 41)"></i></b>
                                <b><i class="fa fa-star" style="color: rgb(239, 197, 41)"></i></b>
                                <b><i class="fa fa-star" style="color: rgb(239, 197, 41)"></i></b>
                                <b>(100/100) điểm</b>
                                <b style="float: right; color: red;"><i class="fa fa-eye">&nbsp;</i>@Model.LuotXemTinTuc</b>
                            </div>
                        </div>
                        <p style="margin-top: 20px">
                            <div class="clearfix"></div>
                            <hr style="border: dashed 1px;" />
                            <div style="margin-left: 20px">@Html.Raw(Model.NoiDungTinTuc)</div>
                        </p>
                    </div>
                </div>
            </div>
            @Html.Action("TrangChu2", "HienThi")
            <div class="top_grid wow fadeInRight" data-wow-delay="0.4s">
                @Html.Action("TatCaCodeWebsite", "LocCode")
                <div class="clearfix"> </div>
                @Html.Action("TatCaCodeGame", "LocCode")
                <div class="clearfix"> </div>
                @Html.Action("TatCaCodeUngDung", "LocCode")
                <div class="clearfix"> </div>
            </div>
        </div>
        @Html.Action("ChanTK", "HienThi")
    </div>
</div>
@Html.Action("ChanTrang", "HienThi")


