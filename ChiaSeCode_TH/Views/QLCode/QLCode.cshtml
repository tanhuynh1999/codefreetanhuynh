@using ChiaSeCode_TH.Models;
@model List<Code>
@{
    ViewBag.Title = "QLCode";
    Layout = "~/Views/Layout/Layout.cshtml";
    NguoiDung ses = (NguoiDung)Session["NguoiDung"];
}
<!--Menu-->
@Html.Action("Menu", "HienThi")
<!--//Menu-->
<!--Thanh công cụ-->
@Html.Action("ThanhCongCu", "HienThi")
<!--//Thanh công cụ-->
<!--Giao diện trang chủ-->
<div class="content_middle">
    <div class="container">
        <div class="content_middle_box">
            <h1 style="color: brown; text-align: center">Quản lý code của @ses.TenHienThi</h1>
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th scope="col" style="color: green">Mã code</th>
                        <th scope="col" style="color: green">Tên code</th>
                        <th scope="col" style="color: green">Lượt xem</th>
                        <th scope="col" style="color: green">Lượt tải</th>
                        <th scope="col" style="color: green">Ngày đăng</th>
                        <th scope="col" style="color: green">Tùy chọn</th>
                        <th scope="col" style="color: green">Tình trạng</th>
                    </tr>
                </thead>
                <tbody>
                    @ViewBag.ThongBao 
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row">@item.MaCode</th>
                            <td>@item.TenMaCode</td>
                            <td>@item.LuotXem</td>
                            <td>@item.LuotTai</td>
                            <td>@item.NgayDang</td>
                            <td>
                                @if (item.Duyet == true)
                                {
                                    <span style="color: brown">Đã duyệt</span>
                                }
                                else
                                {
                                    <span style="color: brown">Chưa duyệt</span>
                                }
                            </td>
                            <td>
                                <b><a href="#" style="text-decoration: none">Sửa</a></b>|
                                <b><a href="#" style="text-decoration: none">Xóa</a></b>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            @Html.Action("TrangChu2", "HienThi")
            <div class="top_grid wow fadeInRight" data-wow-delay="0.4s">
                @Html.Action("TatCaCodeWebsite", "LocCode")
                <div class="clearfix"> </div>
                @Html.Action("TatCaCodeGame", "LocCode")
                <div class="clearfix"> </div>
                @Html.Action("TatCaCodeUngDung", "LocCode")
                <div class="clearfix"> </div>
            </div>
        </div>
        @Html.Action("ChanTK", "HienThi")
    </div>
</div>
@Html.Action("ChanTrang", "HienThi")


